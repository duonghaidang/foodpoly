<body>
  <div class="container">
    <div class="row justify-content-center pt-5 mt-5">
      <div class="col-md-4 formstyle">
        <form action="/register" method="POST">
          <div class="form-group text-center pt-3">
            <h1 class="text-light">ĐĂNG KÝ</h1>
          </div>
          <div class="form-group">
            <input type="text" class="form-control xm-sm-4 pt-3" placeholder="Tên đăng nhập" id="username" name="username">
          </div>
          <div class="form-group">
            <input type="password" class="form-control xm-sm-4 pb-3" placeholder="Mật khẩu" id="password" name="password">
          </div>
          <div class="form-group">
            <input type="password" class="form-control xm-sm-4 pb-3" placeholder="Nhập lại mật khẩu" id="password2" name="password2">
          </div>
          <div class="form-group ">
            <input type="submit" class="btn btn-block btnstyle xm-sm-4 pb-2" value="Đăng Ký">
          </div>
        </form>
      </div>
    </div>
  </div>

</body>

