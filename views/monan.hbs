  <section>
    <div class="container-fluid">
      <div class="row mb-5">
        <div class="col-xl-10 col-lg-9 col-md-8 ml-auto">
          <div class="row align-items-center">
            <div class="col-12 mb-4 mb-xl-0">
              <h3 class="text-muted text-center mb-3">Món Ăn</h3>
              <table id="table" class="display cell-border table-hover text-center">
                <thead>
                  <tr>
                    <th>Hình</th>
                    <th>Tên</th>
                    <th>Loại</th>
                    <th>Giá</th>
                    <th>Mô Tả</th>
                    <th></th>
                  </tr>
                </thead>
                <button type="button" class="btn btn-primary btn-info btn-sm mb-2" data-toggle="modal"
                  data-target="#updateModal" data-whatever="@getbootstrap">Thêm</button>
                <tbody>
                  {{#each foodList}}
                  <tr>
                    <td style="text-align:center">
                      <image src="http://localhost:3011/{{hinhmonan}}" style="width: 80px;height:50px" />
                    </td>           
                    <td>
                      <p class="data">{{tenmonan}}</p>
                    </td>
                    <td>
                      <p class="data">{{loaimonan}}</p>
                    </td>
                    <td>
                      <p class="data">{{giamonan}}</p>
                    </td>
                    <td>
                      <p class="data">{{mota}}</p>
                    </td>
                    <td style="text-align:center">
                      <a href="/edit/{{_id}}" class="btnEdit">Edit</a>
                      <a href="/delete/{{_id}}" class="btnDelete"
                        onclick="return confirm('Bạn có muốn xoá món ăn?')">Delete</a>
                    </td>
                  </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>


            <div class="modal fade" id="updateModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
              aria-hidden="true">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Thêm Món Ăn</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                    <form action="/upload" method="POST" enctype="multipart/form-data">
                      <div class="form-group">
                        <label class="col-form-label">Tên món ăn:</label>
                        <input type="text" class="form-control" id="tenmonan" name="tenmonan">
                      </div>
                      <div class="form-group">
                        <label class="col-form-label">Loại món ăn:</label>
                        <select class="form-control" name="loaimonan" id="loaimonan">
                          {{#each typeList}}
                          <option value="{{tenloai}}">{{tenloai}}</option>
                          {{/each}}
                        </select>
                      </div>
                      <div class="form-group">
                        <label class="col-form-label">Giá:</label>
                        <input type="text" class="form-control" id="giamonan" name="giamonan">
                      </div>
                      <div class="form-group">
                        <label class="col-form-label">Chọn hình:</label>
                        <input type="file" class="form-control" id="hinhmonan" name="hinhmonan">
                      </div>
                      <div class="form-group">
                        <label for="message-text" class="col-form-label">Mô tả:</label>
                        <input type="text" class="form-control" id="mota" name="mota"></textarea>
                      </div>
                      <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Thêm</button>
                      </div>
                    </form>
                  </div>

                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <script>
    $(document).ready(function () {
      $('#table').DataTable();
