  <section>
    <div class="container-fluid">
      <div class="row mb-5">
        <div class="col-xl-10 col-lg-9 col-md-8 ml-auto">
          <div class="row align-items-center">
            <div class="col-12 mb-4 mb-xl-0">
              <h3 class="text-muted text-center mb-3">Loại Món Ăn</h3>
              <table id="table" class="display cell-border table-hover text-center">
                <thead>
                  <tr class="text-muted">
                    <th>Hình</th>
                    <th>Mã</th>
                    <th>Tên</th>
                    <th></th>
                  </tr>
                </thead>
                <button type="button" class="btn btn-primary btn-info btn-sm mb-2" data-toggle="modal"
                  data-target="#updateTypeModal" data-whatever="@getbootstrap">Thêm</button>
                <tbody>
                  {{# each typeList}}
                  <tr>
                    <td style="text-align:center">
                      <image src="http://localhost:3011/{{loaihinhmonan}}" style="width: 80px;height:50px" />
                    </td>
                    <td>
                      <p class=" data">{{maloai}}</p>
                    </td>
                    <td>
                      <p class=" data">{{tenloai}}</p>
                    </td>
                    <td style="text-align:center">
                      <a href="/editType/{{_id}}" class="btnEdit">Edit</a>
                      <a href="/deleteType/{{_id}}" class="btnDelete"
                        onclick="return confirm('Bạn có muốn xoá loại món ăn?')">Delete</a>
                    </td>
                  </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>


            <div class="modal fade" id="updateTypeModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
              aria-hidden="true">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Thêm Loại Món Ăn</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                    <form action="/uploadType" method="POST" enctype="multipart/form-data">
                      <div class="form-group">
                        <label class="col-form-label">Mã loại:</label>
                        <input type="text" class="form-control" id="maloai" name="maloai">
                      </div>
                      <div class="form-group">
                        <label class="col-form-label">Tên loại:</label>
                        <input type="text" class="form-control" id="tenloai" name="tenloai">
                      </div>
                      <div class="form-group">
                        <label class="col-form-label">Chọn hình:</label>
                        <input type="file" class="form-control" id="loaihinhmonan" name="loaihinhmonan">
                      </div>
                      <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Thêm</button>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <script>
    $(document).ready(function () {
